{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
            <div class="p-2">
                <a href="{{ path('task_list') }}" >
                <button class="btn btn-primary">
                Return to Assignment List
                </button>
                </a>
            </div>
            <div class="mr-auto w-100 p-2">
                {{ form_start(form, {'action' : path('task_create')}) }}
                {{ form_widget(form) }}
                <button type="submit" class="btn btn-success pull-right m-2">Add</button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}